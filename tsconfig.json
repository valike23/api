{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "outDir": "./dist",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": false
    },
    "include": [
      "./source/**/*"
    ],
    "exclude": [
      "node_modules",
      "./dist"
    ]
  }